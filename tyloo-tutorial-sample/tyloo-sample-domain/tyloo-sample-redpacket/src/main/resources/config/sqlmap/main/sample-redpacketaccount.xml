<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="io.tyloo.sample.redpacket.infrastructure.dao.RedPacketAccountDao">

    <resultMap id="result"
               transactionType="io.tyloo.sample.redpacket.domain.entity.RedPacketAccount">
        <id property="id" javaType="java.lang.Long" column="RED_PACKET_ACCOUNT_ID"/>
        <result property="balanceAmount" column="BALANCE_AMOUNT"/>
        <result property="userId" column="USER_ID"/>
    </resultMap>

    <sql id="sql_select">
        SELECT
        RED_PACKET_ACCOUNT_ID,
        BALANCE_AMOUNT,
        USER_ID
        FROM
        RED_RED_PACKET_ACCOUNT
    </sql>


    <select id="findAll" resultMap="result">
        <include refid="sql_select"/>
    </select>

    <select id="findByUserId" resultMap="result">
        <include refid="sql_select"/>
        WHERE USER_ID = #{id,javaType=java.lang.Long,jdbcType=BIGINT}
    </select>

    <insert id="insert" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO RED_RED_PACKET_ACCOUNT
        (
        BALANCE_AMOUNT,
        USER_ID
        )
        VALUES
            (
            #{balanceAmount},
            #{userId}
            )
    </insert>

    <update id="update" parameterType="io.tyloo.sample.redpacket.domain.entity.RedPacketAccount">
        UPDATE
        RED_RED_PACKET_ACCOUNT
        SET
        BALANCE_AMOUNT = #{balanceAmount}
        WHERE RED_PACKET_ACCOUNT_ID = #{id}
    </update>
</mapper>
