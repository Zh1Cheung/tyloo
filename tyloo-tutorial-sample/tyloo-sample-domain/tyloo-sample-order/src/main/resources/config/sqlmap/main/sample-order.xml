<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="io.tyloo.sample.order.infrastructure.dao.OrderDao">

    <resultMap id="result"
               transactionType="io.tyloo.sample.order.domain.entity.Order">
        <id property="id" javaType="java.lang.Long" column="ORDER_ID"/>
        <result property="payerUserId" column="PAYER_USER_ID"/>
        <result property="payeeUserId" column="PAYEE_USER_ID"/>
        <result property="redPacketPayAmount" column="RED_PACKET_PAY_AMOUNT"/>
        <result property="capitalPayAmount" column="CAPITAL_PAY_AMOUNT"/>
        <result property="transactionStatus" column="STATUS"/>
        <result property="merchantOrderNo" column="MERCHANT_ORDER_NO"/>
        <result property="version" column="VERSION"/>
    </resultMap>

    <sql id="sql_select">
        SELECT
        ORDER_ID,
        PAYER_USER_ID,
        PAYEE_USER_ID,
        RED_PACKET_PAY_AMOUNT,
        CAPITAL_PAY_AMOUNT,
        STATUS,
        MERCHANT_ORDER_NO,
        VERSION
        FROM
        ORD_ORDER
    </sql>


    <select id="findAll" resultMap="result">
        <include refid="sql_select"/>
    </select>

    <select id="findById" resultMap="result">
        <include refid="sql_select"/>
        WHERE ORDER_ID = #{id,javaType=java.lang.Long,jdbcType=BIGINT}
    </select>

    <select id="findByMerchantOrderNo" resultMap="result">
        <include refid="sql_select"/>
        WHERE MERCHANT_ORDER_NO = #{findByMerchantOrderNo}
    </select>

    <insert id="insert" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO ORD_ORDER
        (
        PAYER_USER_ID,
        PAYEE_USER_ID,
        RED_PACKET_PAY_AMOUNT,
        CAPITAL_PAY_AMOUNT,
        STATUS,
        MERCHANT_ORDER_NO,
        VERSION
        )
        VALUES
            (
            #{payerUserId},
            #{payeeUserId},
            #{redPacketPayAmount},
            #{capitalPayAmount},
            #{transactionStatus},
            #{merchantOrderNo},
            #{version}
            )
    </insert>

    <update id="update" parameterType="io.tyloo.sample.order.domain.entity.Order">
        UPDATE
        ORD_ORDER
        SET
        STATUS = #{transactionStatus},
        RED_PACKET_PAY_AMOUNT = #{redPacketPayAmount},
        CAPITAL_PAY_AMOUNT = #{capitalPayAmount},
        VERSION = #{version}
        WHERE ORDER_ID = #{id} AND VERSION=#{version}-1
    </update>
</mapper>
