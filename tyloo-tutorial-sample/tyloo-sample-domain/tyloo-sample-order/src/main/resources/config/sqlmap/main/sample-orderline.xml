<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="io.tyloo.sample.order.infrastructure.dao.OrderLineDao">

    <resultMap id="result"
               transactionType="io.tyloo.sample.order.domain.entity.OrderLine">
        <result property="id" javaType="java.lang.Long" column="ORDER_LINE_ID"/>
        <result property="productId" column="PRODUCT_ID"/>
        <result property="quantity" column="QUANTITY"/>
        <result property="unitPrice" column="UNIT_PRICE"/>
    </resultMap>

    <sql id="sql_select">
        SELECT
        ORDER_LINE_ID,
        PRODUCT_ID,
        QUANTITY,
        UNIT_PRICE
        FROM
        TCC_ORDER_LINE
    </sql>

    <select id="findById" resultMap="result">
        <include refid="sql_select"/>
        WHERE ORDER_LINE_ID = #{id,javaType=java.lang.Long,jdbcType=BIGINT}
    </select>

    <insert id="insert" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO ORD_ORDER_LINE
        (
        PRODUCT_ID,
        QUANTITY,
        UNIT_PRICE
        )
        VALUES
        (
        #{productId},
        #{quantity},
        #{unitPrice}
        )
    </insert>
</mapper>
